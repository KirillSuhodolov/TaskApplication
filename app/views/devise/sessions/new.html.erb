<div class="span6">
<h2>Login</h2>
  <p class="notice alert alert-success"><%= notice %></p>
  <p class="alert alert-error"><%= alert %></p>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="input-prepend"><%= f.label :email %>
  <span class="add-on"><i class="icon-envelope"></i></span>
  <%= f.email_field :email %></div>

  <div class="input-prepend"><%= f.label :password %>
  <span class="add-on"><i class="icon-asterisk"></i></span>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="controls"><%= f.check_box :remember_me, :class => "checkbox" %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div><%= f.submit "Enter", :class => "btn" %></div>
<% end %>
<div class="new_links">
  <%= render "devise/shared/links" %>
</div>
<br clear="all" />
 </div>